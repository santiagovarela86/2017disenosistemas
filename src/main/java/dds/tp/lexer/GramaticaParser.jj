SKIP: { " " }
TOKEN [IGNORE_CASE] : {
<CUENTA: ("cuenta("<NOMBRE>")")> //cuenta(NombreDeCuenta)
| <INDICADOR: ("indicador("<NOMBRE>")")> //indicador(nombredeIndicador)
| <MAS: "+">
| <MENOS: "-">
| <POR: "*">
| <DIV: "/">
| <NUMERO: (["0"-"9"])+ >
| <NOMBRE: ["a"-"z"](["a"-"z"] | ["0"-"9"])+>
}

